package Model.RecommendationModel.CustomTypes;

import com.mongodb.BasicDBObject;

import java.util.Date;

/**
 * User: adav
 */
public class WithinSiteUserLocations extends BasicDBObject{

    //{     "longitude" : "-1.932409",     "latitude" : "52.446661",     "accuracy" : "50.000000",     "updated" : ISODate("2013-02-21T03:05:40.905Z") }

    public WithinSiteUserLocations (double longitude, double latitude, double accuracy, Date updated){
        put("longitude", longitude);
        put("latitude", latitude);
        put("accuracy", accuracy);
        put("updated", updated);
    }

    public WithinSiteUserLocations (LatLong latLong, double accuracy, Date updated){
        put("longitude", latLong.getLongitude());
        put("latitude", latLong.getLatitude());
        put("accuracy", accuracy);
        put("updated", updated);
    }

    public double getLongitude(){
        return getDouble("longitude");
    }

    public double getLatitude(){
        return getDouble("latitude");
    }

    public double getAccuracy(){
        return getDouble("accuracy");
    }

    public LatLong getLatLong(){
        return new LatLong(getLatitude(), getLongitude());
    }

    public Date getUpdated(){
        return getDate("updated");
    }
}
